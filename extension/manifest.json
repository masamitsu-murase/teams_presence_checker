{
    "manifest_version": 2,
    "name": "Teams Presence Checker",
    "version": "0.1.0",
    "description": "Extension to check Teams Presence.",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "teams_presence_checker@masamitsu.murase.jp",
            "strict_min_version": "57.0"
        }
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/background/background.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Teams Presence Checker"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true,
        "chrome_style": true
    },
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": []
}